@page
@model Swifty.Web.Pages.Setup.User.CreateModel

@{
    ViewData["Title"] = "Users - Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />

<p><b>Note: </b>Users are automatically created when they login via OAuth2. This setup area can still be useful if you want to manuall create/edit/delete users.</p>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserEntity.Email" class="control-label"></label>
                <input asp-for="UserEntity.Email" class="form-control" />
                <span asp-validation-for="UserEntity.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
