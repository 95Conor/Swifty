@page
@model Swifty.Web.Pages.Setup.Skill.EditModel

@{
    ViewData["Title"] = "Skils - Edit";
}
<h1>Edit</h1>

<h4>Skill</h4>
<hr />

<b style="color:red;">Caution </b><br /> 
Skills are saved against Skill Snapshots by reference. Editing a Skill will persist throughout all past Skill Snapshots. <br />
To preserve Skill Snapshot integrity for users, it is advised to archive skills and create new ones instead.

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Skill.Id" />

            <div class="form-group">
                <label asp-for="Skill.Detail" class="control-label"></label>
                <input asp-for="Skill.Detail" class="form-control" />
                <span asp-validation-for="Skill.Detail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Skill.Area" class="control-label"></label>
                <select asp-for="Skill.SkillAreaId" asp-items="Model.SkillAreaSelectList.OrderBy(x => x.Text)" class="form-control">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Skill.SkillAreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Skill.Level" class="control-label"></label>
                <select asp-for="Skill.SkillLevelId" asp-items="Model.SkillLevelSelectList.OrderBy(x => x.Text)" class="form-control">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Skill.SkillLevelId" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Skill.IsArchived" /> @Html.DisplayNameFor(model => model.Skill.IsArchived)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
