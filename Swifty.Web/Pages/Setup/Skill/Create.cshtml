@page
@model Swifty.Web.Pages.Setup.Skill.CreateModel

@{
    ViewData["Title"] = "Skills - Create";
}

<h1>Create</h1>

<h4>Skill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Skill.Area" class="control-label"></label>
                <select asp-for="Skill.SkillAreaId" asp-items="Model.SkillAreaSelectList.OrderBy(x => x.Text)" class="form-control">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Skill.SkillAreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Skill.Level" class="control-label"></label>
                <select asp-for="Skill.SkillLevelId" asp-items="Model.SkillLevelSelectList.OrderBy(x => x.Text)" class="form-control">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="Skill.SkillLevelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Skill.Detail" class="control-label"></label>
                <input asp-for="Skill.Detail" class="form-control" />
                <span asp-validation-for="Skill.Detail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
