@page
@model Swifty.Web.Pages.Setup.Skill.EditModel

@{
    ViewData["Title"] = "Skils - Edit";
}
<h1>Edit</h1>

<h4>Skill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Skill.Id" />

            @* ToDo: Skill.Level and Skill.Area *@

            <div class="form-group">
                <label asp-for="Skill.Detail" class="control-label"></label>
                <input asp-for="Skill.Detail" class="form-control" />
                <span asp-validation-for="Skill.Detail" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Skill.IsArchived" /> @Html.DisplayNameFor(model => model.Skill.IsArchived)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
