<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AllSkills[0].Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllSkills[0].IsArchived)
            </th>

            @* ToDo: Skill.Level and Skill.Area *@

            <th></th>
        </tr>
